{
  "name": "enterprise-lead-management-system",
  "version": "2.1.0",
  "description": "Professional Enterprise Lead Management & CRM System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --no-lint",
    "build:prod": "next build --no-lint --no-mangling",
    "export:prod": "next build --no-lint --no-mangling",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "build:analyze": "set ANALYZE=true && next build",
    "clean": "rm -rf .next out dist",
    "clean:win": "if exist .next rmdir /s /q .next && if exist out rmdir /s /q out && if exist dist rmdir /s /q dist",
    "preview": "next build && next start",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build:prod && electron-builder",
    "build-electron:win": "npm run clean:win && npm run build:prod && electron-builder --win",
    "dist": "npm run build-electron",
    "dist:win": "npm run build-electron:win",
    "package:client": "node scripts/package-for-client.js",
    "build:installer": "npm run package:client",
    "verify:build": "node scripts/verify-build.js",
    "auto-commit": "node auto-commit.js",
    "auto-commit:start": "start-auto-commit.bat",
    "dev:full": "start-development.bat",
    "dev:ps": "start-development.ps1",
    "status": "project-status.bat",
    "setup": "npm install && npm run auto-commit:start",
    "test": "vitest run",
    "db:push": "npx prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.0",
    "dompurify": "^3.2.7",
    "express": "^4.21.2",
    "jose": "^6.1.3"
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-window": "^1.8.8",
    "concurrently": "^9.2.1",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "framer-motion": "^12.23.12",
    "gsap": "^3.13.0",
    "jsdom": "^21.1.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "prisma": "^7.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-window": "^1.8.10",
    "recharts": "^3.1.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4",
    "xlsx": "^0.18.5"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.enterpriseleadmgmt.app",
    "productName": "Enterprise Lead Management System",
    "asar": true,
    "directories": {
      "output": "dist_v2_1_0",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/README*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/*.map",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "out",
        "to": "app",
        "filter": [
          "**/*",
          "!**/*.map"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Enterprise Lead Management System",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "preCompressedFileExtensions": [
        ".avi",
        ".mov",
        ".mp4",
        ".mkv",
        ".webm",
        ".zip",
        ".7z",
        ".png",
        ".jpg",
        ".jpeg",
        ".gif",
        ".webp"
      ],
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/installerIcon.ico",
      "include": "build/installer.nsh",
      "license": "build/license.txt",
      "installerHeaderIcon": "build/installerHeaderIcon.ico",
      "displayLanguageSelector": false
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
